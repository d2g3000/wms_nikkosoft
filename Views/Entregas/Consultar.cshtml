@model IEnumerable<EntregaReng>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "renglones entregas";
}

<div>
    <h4 class="w3-center">Renglones de la nota de entrega</h4>


    <div class="pb-5" id="view-all">
        <table class="table table-striped p-4 overflow-scroll" style="background-color:lightgray;">
            <thead class="text-white" style="background-color:#746ab0;">
                <tr>
                    <th>
                        Reng
                    </th>
                    <th>

                        <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="text-white">Artículo</a>
                    </th>
                    <th class="">

                        Documento


                    </th>
                    <th>
                        Cantidad
                    </th>
                    <th>
                        Rowguid
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.reng_num
                        </td>
                        <td>
                            <a class="w3-button w3-border w3-round-xxlarge w3-green" asp-action="Consultar" asp-route-id="@item.co_art">@item.co_art</a>
                        </td>
                        <td>
                            @item.doc_num
                        </td>
                        <td>
                            @item.total_art
                        </td>
                        <td>
                            @item.rowguid
                        </td>


                    </tr>
                }



            </tbody>

        </table>

        <div class="pagination text-white" style="background-color:#746ab0;">
        </div>
    </div>
</div>

