<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - W.M.S. </title>
    <link rel="stylesheet" href="~/css/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WMS_Nikkosoft.styles.css" asp-append-version="true" />
    <style>
        .list {
            background: white;
            width: 250px;
            height: 100px;
            margin: 10px auto;
            color: black;
            display: flex;
            align-items: center;
            cursor: grab;
        }

        .tarjeta {
            margin: 0.5rem;
            width: 18rem;
            border-radius: 25px;
            box-shadow: 10px 5px 5px rgba(0, 0, 255, .2);
        }

        .close-modal {
            background: none;
            border: none;
            font-size: 1rem;
        }

        .modal {
            width: 380px;
            height: 300px;
            position: fixed;
            top: 10%;
            left: 20%;
            transform: translate(50px,50px);
            border: 1px solid #ccc;
            border-radius: 10px;
            z-index: 2;
            background-color: #fff;
        }

            .modal .header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                border-bottom: 1px solid #ccc;
                padding: 0.5rem;
                background-color: rgba(0,0,0,0.05);
            }

            .modal .body {
                padding: 0.75rem;
                text-align: center;
            }

        #overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.3);
        }

            #overlay.active {
                display: block;
            }

        .cover {
            min-width: 100%;
            min-height: 100%;
            z-index: 9;
            position: fixed;
        }

        .tabla-redonda{
            border-end-end-radius: 20px !important;
            border-end-start-radius:20px !important;
            border-start-start-radius:20px !important;
           border-start-end-radius:20px !important;
        }
        .header-redondo{
            border-end-end-radius: 5% !important;
            border-start-start-radius: 20px !important;
            
        }

        .header-redondo-b {
            border-start-end-radius: 20px !important;
           
        }

        .error_form{
            color:red;
            font-size:20px;
            background-color:white;
        }
      
    </style>
</head>
<body>
    <header>
          @if (User.Identity.IsAuthenticated)
        {

            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#746ab0">
                <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">W.M.S.</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" >
                    <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Recepciones" asp-action="Index">Recepciones</a>
                            </li>
                        <li class="nav-item " >
                            <a class="nav-link text-white" asp-area="" asp-controller="Entregas" asp-action="Index">Entregas</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Ubicacion" asp-action="Index">Ubicaciones</a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Articulos" asp-action="Index">Articulos</a>
                            </li>
                        <li class="nav-item">

                            <a class="nav-link text-white" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                        </li>
                         
                           <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Proveedores" asp-action="Index">Proveedores</a>
                        </li>
                           

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Reportes" asp-action="Index">Reportes</a>
                            </li>
                      
                    </ul>
                </div>
            </div>
            <div style="width:80px;padding-right:5px;">

      
                <form asp-controller="Account" asp-action="Logout">
                    <button class="btn btn-danger ms-2" data-toggle="tooltip" style="height:35px;margin-top:-5px;" data-placement="left" title="Presiona para salir de la aplicación.">
                       <div class="row col">
                    <div class="col-1"> 

                  
                   <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" style="margin-inline-start:-5px;margin-top:-5px;"class="bi bi-door-open" viewBox="0 0 16 16">
                            <path d="M8.5 10c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1" />
                            <path d="M10.828.122A.5.5 0 0 1 11 .5V1h.5A1.5 1.5 0 0 1 13 2.5V15h1.5a.5.5 0 0 1 0 1h-13a.5.5 0 0 1 0-1H3V1.5a.5.5 0 0 1 .43-.495l7-1a.5.5 0 0 1 .398.117zM11.5 2H11v13h1V2.5a.5.5 0 0 0-.5-.5M4 1.934V15h6V1.077z" />
                        </svg>
                            </div>
                                <div class="col-2" style="margin-inline-start:-7px;margin-top:-2px;">
                                <span>Salir</span>
                            </div>
                            
                        </div>
                    </button>
                </form>
                </div>
        </nav>

         
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="fixed-bottom">
        <footer class="border-top footer box-shadow text-white fixed-bottom" >
            <img src="~/img/wmsblanco.png" class="float-end" width="120" height="60" />
            <div style="background-color:#6153a9">
            &copy; 2023 - WMS_Nikkosoft 
        </div>
    </footer>
    </div>
    <script src="~/js/jquery/dist/jquery.min.js"></script>
    <script src="~/js/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/sweetalert/sweetalert.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
